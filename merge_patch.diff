+def compute_atr(
+    exchange,
+    symbol: str,
+    timeframe: str = "5m",
+    period: int = 14,
+    *,
+    limit: int | None = None
+) -> Tuple[float, float]:
+    """
+    –í–æ–∑–≤—Ä–∞—â–∞–µ—Ç (atr, last_close).
+    ATR –ø–æ Wilder/SMA: TR = max(H-L, |H-C_prev|, |L-C_prev|), –∑–∞—Ç–µ–º SMA(period).
+    """
+    if limit is None:
+        limit = max(period + 1, 100)
+    ohlcv = _fetch_ohlcv(exchange, symbol, timeframe, limit)
+    if len(ohlcv) < period + 1:
+        return 0.0, (ohlcv[-1][4] if ohlcv else 0.0)
+    trs: List[float] = []
+    for i in range(1, len(ohlcv)):
+        _, o, h, l, c, _v = ohlcv[i]
+        _, _o1, _h1, _l1, c_prev, _v1 = ohlcv[i - 1]
+        tr = max(h - l, abs(h - c_prev), abs(l - c_prev))
+        trs.append(tr)
+    atr = _sma(trs, period)
+    last_close = float(ohlcv[-1][4])
+    return float(atr), last_close
